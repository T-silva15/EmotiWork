@page
@model EmotiWork.Pages.HomeModel
@{
    ViewData["Title"] = "Home - EmotiWork";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        /* Notification popup styles */
        #notificationPopup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .notification-container {
            background-color: #f0f8ff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            width: 80%;
            max-width: 700px;
            padding: 20px;
            position: relative;
        }

        .notification-header {
            background-color: #6eb5ff;
            color: #fff;
            padding: 10px;
            margin: -20px -20px 20px;
            border-radius: 8px 8px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .notification-header h2 {
                margin: 0;
                font-size: 24px;
                text-align: center;
                width: 100%;
            }

        .notification-logo {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

            .notification-logo img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #fff;
            }

        .notification-content {
            padding: 20px;
            text-align: center;
        }

        .notification-date {
            color: #666;
            margin-bottom: 20px;
        }

        .notification-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-cancel {
            background-color: #ff6b6b;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-go {
            background-color: #63b3ed;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Show notification button */
        .show-notification-btn {
            background-color: #63b3ed;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 15px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .show-notification-btn:hover {
                background-color: #4a90e2;
            }
    </style>
</head>
<body class="home-body">
    <!-- Left Sidebar -->
    <aside class="sidebar-left">
        <nav class="sidebar-nav">
            <ul class="nav-items">
                <li class="nav-item">
                    <a href="/Team" class="nav-link" aria-label="Equipa">
                        <i class="fas fa-users"></i>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Dashboard" class="nav-link" aria-label="Dashboard">
                        <i class="fas fa-gauge-high"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Questionnaire" class="nav-link" aria-label="Questionário">
                        <i class="fas fa-circle-question"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Statistics" class="nav-link" aria-label="Estatísticas">
                        <i class="fas fa-chart-line"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Notifications" class="nav-link" aria-label="Notificações">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge"></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Reports" class="nav-link" aria-label="Relatórios">
                        <i class="fas fa-user-secret"></i>
                    </a>
                </li>
                <li class="nav-item nav-item-bottom">
                    <a href="/Settings" class="nav-link" aria-label="Definições">
                        <i class="fas fa-gear"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="logo-container">
                <a href="/Home" class="logo-link">
                    <img src="~/img/emotiwork.png" alt="EmotiWork Logo" class="logo-img" />
                    <span class="logo-text">EmotiWork</span>
                </a>
            </div>
            <div class="user-info">
                <a href="/Profile" class="user-link">
                    <img src="~/img/user-avatar.png" alt="User Avatar" class="user-avatar" />
                    <span class="user-name">José</span>
                </a>
            </div>
        </header>

        <!-- Page Content -->
        <div class="content-container">
            <h1 class="page-title">HOME</h1>

            <div class="mood-selection">
                <div class="mood-option">
                    <a href="/Questionnaire">
                        <img src="~/img/sadEmoji.png" alt="Happy" class="mood-emoji" />
                    </a>
                </div>
                <div class="mood-option">
                    <a href="/Questionnaire">
                        <img src="~/img/neutralEmoji.png" alt="Happy" class="mood-emoji" />
                    </a>
                </div>
                <div class="mood-option">
                    <a href="/Questionnaire">
                        <img src="~/img/happyEmoji.png" alt="Happy" class="mood-emoji" />
                    </a>
                </div>
            </div>

            <!-- Notification Button -->
            <button id="showNotification" style="visibility: hidden !important" class="show-notification-btn">
                <i class="fas fa-bell"></i> Mostrar Questionário
            </button>
        </div>

        <!-- Footer -->
        <footer class="home-footer">
            <div class="footer-content">
                <div class="copyright">EmotiWork - 2025</div>
                <div class="privacy-policy">
                    <a href="/Privacy" class="privacy-link">Proteção de Dados</a>
                </div>
            </div>
        </footer>
    </main>

    <!-- Notification Popup -->
    <div id="notificationPopup">
        <div class="notification-container">
            <div class="notification-header">
                <div class="notification-logo">
                    <img src="~/img/EmotiWork.png" alt="EmotiWork" />
                </div>
                <h2>NOTIFICAÇÃO POPUP</h2>
                <div class="notification-logo">
                    <img src="~/img/EmotiWork.png" alt="EmotiWork" />
                </div>
            </div>
            <div class="notification-content">
                <p>
                    Novo questionário disponível! Complete agora para nos ajudar a compreender melhor
                    o seu bem-estar e melhorar o ambiente de trabalho.
                </p>
                <div class="notification-date">
                    <span id="currentDate"></span>
                </div>
                <div class="notification-buttons">
                    <button class="btn-cancel" id="closeNotification">Adiar</button>
                    <button class="btn-go" id="goToQuestionnaire">Ir</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript for notification functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get notification popup elements
            const notificationPopup = document.getElementById('notificationPopup');
            const showNotification = document.getElementById('showNotification');
            const closeNotification = document.getElementById('closeNotification');
            const goToQuestionnaire = document.getElementById('goToQuestionnaire');

            // Set current date in notification
            const currentDateElement = document.getElementById('currentDate');
            const now = new Date();
            const formattedDate = `${String(now.getDate()).padStart(2, '0')}/${String(now.getMonth() + 1).padStart(2, '0')}/${now.getFullYear()} ${String(now.getHours()).padStart(2, '0')}:${String(now.getMinutes()).padStart(2, '0')}:${String(now.getSeconds()).padStart(2, '0')}`;
            currentDateElement.textContent = formattedDate;

            // Open notification popup when button is clicked
            showNotification.addEventListener('click', function() {
                notificationPopup.style.display = 'flex';
                document.body.style.overflow = 'hidden'; // Prevent scrolling
            });

            // Close notification popup
            closeNotification.addEventListener('click', function() {
                notificationPopup.style.display = 'none';
                document.body.style.overflow = ''; // Restore scrolling
            });

            // Go to questionnaire page
            goToQuestionnaire.addEventListener('click', function() {
                window.location.href = '/Questionnaire';
            });

            // Key press event for testing (press 'N' key)
            document.addEventListener('keydown', function(e) {
                if (e.key.toLowerCase() === 'n') {
                    notificationPopup.style.display = 'flex';
                    document.body.style.overflow = 'hidden'; // Prevent scrolling
                }
            });

            // Close popup when clicking outside the content
            window.addEventListener('click', function(e) {
                if (e.target === notificationPopup) {
                    notificationPopup.style.display = 'none';
                    document.body.style.overflow = '';
                }
            });
        });
    </script>
</body>
</html>