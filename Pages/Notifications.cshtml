@page
@model EmotiWork.Pages.NotificationsModel
@{
    ViewData["Title"] = "Lista Notificações - EmotiWork";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notification-list.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body class="home-body">
    <!-- Left Sidebar -->
    <aside class="sidebar-left">
        <nav class="sidebar-nav">
            <ul class="nav-items">
                <li class="nav-item">
                    <a href="/Team" class="nav-link">
                        <i class="fas fa-users"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Dashboard" class="nav-link">
                        <i class="fas fa-gauge-high"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Questionnaire" class="nav-link">
                        <i class="fas fa-circle-question"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Statistics" class="nav-link">
                        <i class="fas fa-chart-line"></i>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Notifications" class="nav-link">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge"></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Reports" class="nav-link">
                        <i class="fas fa-user-secret"></i>
                    </a>
                </li>
                <li class="nav-item nav-item-bottom">
                    <a href="/Settings" class="nav-link">
                        <i class="fas fa-gear"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="logo-container">
                <a href="/Home" class="logo-link">
                    <img src="~/img/emotiwork.png" alt="EmotiWork Logo" class="logo-img" />
                    <span class="logo-text">EmotiWork</span>
                </a>
            </div>
            <div class="user-info">
                <a href="/Profile" class="user-link">
                    <img src="~/img/user-avatar.png" alt="User Avatar" class="user-avatar" />
                    <span class="user-name">José</span>
                </a>
            </div>
        </header>

        <!-- Page Content -->
        <div class="content-container">
            <h1 class="page-title">LISTA NOTIFICAÇÕES</h1>

            <div class="notification-list-container">
                <table class="notification-table">
                    <thead>
                        <tr>
                            <th class="subject-col">Assunto</th>
                            <th class="date-col">Data</th>
                            <th class="actions-col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="subject-col">Questionário QMark01 - Lembrete</td>
                            <td class="date-col">30-03-2025</td>
                            <td class="actions-col">
                                <button class="btn-delete" title="Eliminar"><i class="fas fa-times"></i></button>
                                <button class="btn-email" title="Enviar email"><i class="fas fa-envelope"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td class="subject-col">Foi Adicionado à Equipa - Mark01</td>
                            <td class="date-col">30-03-2025</td>
                            <td class="actions-col">
                                <button class="btn-delete" title="Eliminar"><i class="fas fa-times"></i></button>
                                <button class="btn-email" title="Enviar email"><i class="fas fa-envelope"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td class="subject-col">Foi Adicionado ao Departamento - Vendas</td>
                            <td class="date-col">30-03-2025</td>
                            <td class="actions-col">
                                <button class="btn-delete" title="Eliminar"><i class="fas fa-times"></i></button>
                                <button class="btn-email" title="Enviar email"><i class="fas fa-envelope"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer -->
        <footer class="home-footer">
            <div class="footer-content">
                <div class="copyright">EmotiWork - 2025</div>
                <div class="privacy-policy">
                    <a href="/Privacy" class="privacy-link">Proteção de Dados</a>
                </div>
            </div>
        </footer>
    </main>
</body>
</html>

