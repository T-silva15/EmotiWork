@page
@model EmotiWork.Pages.VacationModel
@{
    ViewData["Title"] = "Marcar Férias - EmotiWork";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vacation.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body class="home-body">
    <!-- Left Sidebar -->
    <aside class="sidebar-left">
        <nav class="sidebar-nav">
            <ul class="nav-items">
                <li class="nav-item">
                    <a href="/Team" class="nav-link">
                        <i class="fas fa-users"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Dashboard" class="nav-link">
                        <i class="fas fa-gauge-high"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Questionnaire" class="nav-link">
                        <i class="fas fa-circle-question"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Statistics" class="nav-link">
                        <i class="fas fa-chart-line"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Notifications" class="nav-link">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge"></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Reports" class="nav-link">
                        <i class="fas fa-user-secret"></i>
                    </a>
                </li>
                <li class="nav-item nav-item-bottom">
                    <a href="/Settings" class="nav-link">
                        <i class="fas fa-gear"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="logo-container">
                <a href="/" class="logo-link">
                    <img src="~/img/emotiwork.png" alt="EmotiWork Logo" class="logo-img" />
                    <span class="logo-text">EmotiWork</span>
                </a>
            </div>
            <div class="user-info">
                <a href="/Profile" class="user-link">
                    <img src="~/img/user-avatar.png" alt="User Avatar" class="user-avatar" />
                    <span class="user-name">José</span>
                </a>
            </div>
        </header>

        <!-- Page Content -->
<div class="content-container vacation-container" style="padding-top: 20px; justify-content: flex-start;">
    <h1 class="vacation-title">MARCAR FÉRIAS</h1>

    <div class="vacation-form-container" style="margin-bottom: 80px;">
                <div class="date-inputs-container">
                    <div class="date-field">
                        <input type="text" id="startDate" class="date-input" placeholder="Data de início..." readonly />
                        <i class="fas fa-caret-down dropdown-icon"></i>
                        <div id="startDateCalendar" class="calendar-dropdown">
                            <div class="calendar-header">
                                <button type="button" class="month-nav prev"><i class="fas fa-caret-up"></i></button>
                                <div class="month-year">abril de 2025</div>
                                <button type="button" class="month-nav next"><i class="fas fa-caret-down"></i></button>
                            </div>
                            <div class="calendar-body">
                                <div class="weekday-header">
                                    <span>D</span><span>S</span><span>T</span><span>Q</span><span>Q</span><span>S</span><span>S</span>
                                </div>
                                <div class="days-grid">
                                    <!-- Calendar days inserted with JavaScript -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="date-field">
                        <input type="text" id="endDate" class="date-input" placeholder="Data de fim..." readonly />
                        <i class="fas fa-caret-down dropdown-icon"></i>
                        <div id="endDateCalendar" class="calendar-dropdown">
                            <div class="calendar-header">
                                <button type="button" class="month-nav prev"><i class="fas fa-caret-up"></i></button>
                                <div class="month-year">junho de 2025</div>
                                <button type="button" class="month-nav next"><i class="fas fa-caret-down"></i></button>
                            </div>
                            <div class="calendar-body">
                                <div class="weekday-header">
                                    <span>D</span><span>S</span><span>T</span><span>Q</span><span>Q</span><span>S</span><span>S</span>
                                </div>
                                <div class="days-grid">
                                    <!-- Calendar days will be inserted with JavaScript -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="vacation-actions">
                    <button type="button" class="submit-btn">Submeter</button>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="home-footer">
            <div class="footer-content">
                <div class="copyright">EmotiWork - 2025</div>
                <div class="privacy-policy">
                    <a href="#" class="privacy-link">Proteção de Dados</a>
                </div>
            </div>
        </footer>
    </main>

    <script src="~/js/vacation.js" asp-append-version="true"></script>
</body>
</html>
